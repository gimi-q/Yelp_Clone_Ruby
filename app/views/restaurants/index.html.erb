

<% if @restaurants.any? %>
  <% @restaurants.reverse.each do |restaurant| %>
    <h2>
      <%= link_to restaurant.name, restaurant_path(restaurant) %>
    </h2>
    <h3>
      <%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %>
    </h3>
    <h3>Average rating: <%= restaurant.average_rating.to_i %></h3>
    <% if user_signed_in? && @current_user_id == restaurant.user_id %>
      <h3>
        <%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
      </h3>
      <h5>
        <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %>
      </h5>
    <% end %>
    <h3>
      Reviews for
      <%= restaurant.name %>
    </h3>
    <% if restaurant.reviews.any? %>
      <ul>
        <% restaurant.reviews.each do |review| %>
          <li>
            <%= review.thoughts %>
            <strong>
              <%= review.rating %>
            </strong>
            \/5
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No reviews</p>
    <% end %>
  <% end %>
<% else %>
  <h1>No restaurants to see here</h1>
<% end %>
<br><br>
<a href='/restaurants/new'>Add Restaurant</a>
